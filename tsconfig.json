{
	"extends": ["@tsconfig/strictest/tsconfig", "@tsconfig/node16/tsconfig"],
	"compilerOptions": {
		"lib": ["esnext"],
		"noEmit": true,
		"resolveJsonModule": true,
		"exactOptionalPropertyTypes": false,
		"allowImportingTsExtensions": true,
		"sourceMap": true,
    "outDir": "./dist",
		"noImplicitAny": false
	},
	"include": ["./src/**/*", "__test__/**/*", "bin/**/*"]
}
